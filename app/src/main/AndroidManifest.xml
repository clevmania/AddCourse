<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lawrence.addcourse" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        >
        <activity
            android:theme="@style/AppTheme"
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:name=".CourseDisplayActivity"
            android:label="View Courses"/>
        <activity android:name=".WelcomeActivity"
                  android:theme="@style/AppTheme"
                  android:label="showing Grade Courses" />
        <activity android:name=".MainActivity"
                  android:theme="@style/AppTheme"
                  android:label="Welcome" />
        <activity android:name=".StudentProfileActivity"
                  android:theme="@style/AppTheme"
                  android:label="Profile SetUp"/>
        <activity android:name=".ShareActivity"
                  android:theme="@style/AppTheme"/>
    </application>

</manifest>
